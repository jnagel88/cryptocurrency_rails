    <%= form.label :user_id %>
    <%= form.number_field :user_id, id: :crypto_user_id, value: current_user.id %>
  </div>

  <div class="form-group">
    <%= form.label :cost_per %>
    <%= form.text_field :cost_per, id: :crypto_cost_per, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :amount_owned %>
    <%= form.text_field :amount_owned, id: :crypto_amount_owned, class:'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary pull-right' %>
  </div>
<% end %>

